<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:background="@drawable/ic_cg_detail_exp_bg"
    android:orientation="vertical"
    android:padding="25dp">

    <LinearLayout
        android:layout_width="137dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="40dp"
            android:layout_height="33dp">
        <com.yyyu.baselibrary.ui.widget.RoundImageView
            android:id="@+id/riv_icon"
            android:layout_width="32dp"
            android:layout_height="33dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_user_df" />
            <ImageView
                android:id="@+id/iv_tag"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/ic_mon_mark_blue"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:maxLines="1"
            android:maxEms="11"
            android:text="JosJackson"
            android:ellipsize="end"
            android:textColor="#FFF"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_exp_icon"
            android:layout_width="32dp"
            android:layout_height="32dp" />

        <TextView
            android:id="@+id/tv_hr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text=""
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="#FFF"
            android:textSize="16sp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="15dp">

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12/13"
            android:textColor="#FFFFFFFF"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="13:32 am"
            android:textColor="#FFFFFFFF"
            android:textSize="12sp" />
    </RelativeLayout>

</LinearLayout>